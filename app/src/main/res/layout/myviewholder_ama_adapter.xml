    <com.makeramen.roundedimageview.RoundedImageView
        app:riv_corner_radius="5dp"
        android:id="@+id/iv_products_mvhaa"
        android:layout_width="60dp"
        android:layout_height="60dp" />
    </RelativeLayout>

</RelativeLayout>