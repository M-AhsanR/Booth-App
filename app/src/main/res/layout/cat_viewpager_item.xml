<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="210dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ProgressBar
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:indeterminateTint="@color/orange" />

        <ImageView
            android:id="@+id/promoted_images"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#55222222" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            style="@style/HeadingsTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:layout_gravity="end"
            android:text="@string/sponsored"
            android:textColor="@color/orange" />

        <TextView
            android:id="@+id/promoted_text"
            style="@style/TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:layout_gravity="end"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/promoted_text_secondry"
            style="@style/TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:layout_gravity="end"
            android:textColor="@color/white" />

    </LinearLayout>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true"
    android:layout_marginBottom="25dp">
    <com.bikomobile.circleindicatorpager.CircleIndicatorPager
        android:id="@+id/indicator"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:gravity="center"
        app:ci_drawable="@drawable/selected_dots"
        app:ci_drawable_unselected="@drawable/default_dots"
        android:layout_centerVertical="true"
        app:ci_height="7dp"
        android:layout_toLeftOf="@+id/readmore_btn"
        android:layout_marginRight="10dp"
        app:ci_width="7dp"/>

    <Button
        android:id="@+id/readmore_btn"
        style="@style/OrangeBtn"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:paddingLeft="35dp"
        android:paddingRight="35dp"
        android:text="@string/ReadMore"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"/>
</RelativeLayout>


</RelativeLayout>