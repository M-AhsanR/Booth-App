<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/mymessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="300dp"
        android:layout_marginTop="15dp"
        android:gravity="left"
        android:padding="10dp"
        style="@style/TextView"
        android:visibility="visible"
        android:textColor="@color/white"
        android:layout_gravity="right"
        android:background="@drawable/my_message_shape"
        android:minWidth="100dp"/>

    <TextView
        android:padding="10dp"
        android:layout_marginTop="15dp"
        android:id="@+id/othersmessage"
        android:gravity="left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="300dp"
        android:visibility="visible"
        android:background="@drawable/others_message_shape"
        android:minWidth="100dp"
        style="@style/TextView"
        />

    <RelativeLayout
        android:id="@+id/senderImgLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="15dp">
    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/sentImg"
        android:layout_width="140dp"
        android:layout_height="140dp"
        app:riv_corner_radius="8dp"
        android:scaleType="centerCrop"
        android:src="@color/yellow"/>
        <ImageView
            android:id="@+id/sender_play_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/play_button"
            android:visibility="gone"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/receivedImgLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">
    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/recievedImg"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:scaleType="centerCrop"
        app:riv_corner_radius="8dp"
        android:src="@color/yellow"/>
        <ImageView
            android:id="@+id/reciever_play_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/play_button"
            android:visibility="gone"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

</LinearLayout>