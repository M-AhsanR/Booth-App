<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="20dp"
    android:paddingBottom="10dp"
    android:background="@drawable/custom_dialog_background">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/oneTimeVerification"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:textColor="@color/orange"
        style="@style/HeadingsTextView"/>


    <TextView
        android:id="@+id/alert_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:visibility="gone"
        android:text="Enter 4 digit code to mark order as completed."
        android:layout_gravity="center"
        android:textAlignment="center"
        android:textColor="@color/black"
        style="@style/HeadingsTextView"/>

    <EditText
        android:id="@+id/codeEditText"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@drawable/round_grey_border"
        android:layout_marginTop="10dp"
        android:paddingRight="15dp"
        android:hint="@string/Enterotp"
        android:textColorHint="@color/font_color"
        android:paddingLeft="15dp"
        android:textColor="@color/font_color"
        android:textSize="16dp"
        />

    <TextView
        android:id="@+id/resend_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/resendcode"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:textColor="@color/orange"
        style="@style/HeadingsTextView"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:weightSum="2.2">

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="0sp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:background="@drawable/rounded_corners_darkwhite_btn"
            android:backgroundTint="@color/quantum_grey"
            android:text="@string/Cancel"
            android:layout_marginBottom="10dp"
            android:textAllCaps="false"
            style="@style/TextView"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight=".2"
            android:layout_height="30dp"/>
        <Button
            android:id="@+id/btn_apply"
            android:layout_width="0sp"
            android:layout_height="30dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:background="@drawable/rounded_corners_orange_btn"
            android:text="@string/apply"
            android:textAllCaps="false"
            style="@style/TextView"/>
    </LinearLayout>

</LinearLayout>