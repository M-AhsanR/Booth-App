<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/orange</item>

        <item name="android:windowContentTransitions" tools:ignore="NewApi">true</item>
    </style>
    <style name="bottom_nevigation_theme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/orange</item>

        <item name="android:windowContentTransitions" tools:ignore="NewApi">true</item>
    </style>


    <style name="Hyperlink">
        <item name="android:textColor">@color/orange</item>
        <item name="android:textSize">14dp</item>
        <item name="android:background">@drawable/underline_style</item>
    </style>

    <style name="EditText" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">@drawable/layoutstyle_edittext</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/font_color</item>
        <item name="android:textColorHint">@color/font_color</item>
        <item name="android:fontFamily">@font/robotomedium</item>
        <item name="android:maxLines">1</item>
        <item name="android:inputType">textVisiblePassword</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textDirection">ltr</item>
        <item name="android:elevation" tools:ignore="NewApi">2dp</item>
    </style>

    <style name="EditTextDetail" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">@drawable/layoutstyle_edittext</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingLeft">25dp</item>
        <item name="android:paddingRight">25dp</item>
        <item name="android:inputType">textVisiblePassword</item>
        <item name="android:textSize">14dp</item>
        <item name="android:fontFamily">@font/robotomedium</item>
    </style>

    <style name="OrangeBtn" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">@drawable/rounded_corners_orange_btn</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14dp</item>
        <item name="android:fontFamily">@font/robotomedium</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="OrangeBtnwithweight" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">@drawable/rounded_corners_orange_btn</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14dp</item>
        <item name="android:fontFamily">@font/robotomedium</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SmallOrangeBtn" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">@drawable/rounded_corners_orange_btn</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">12dp</item>
        <item name="android:fontFamily">@font/robotomedium</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SmallWhiteBtn" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">@drawable/white_btn</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:fontFamily">@font/robotomedium</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/orange</item>
    </style>

    <style name="AppTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/orange</item>
        <item name="tabIndicatorHeight">4dp</item>
        <item name="tabPaddingStart">15dp</item>
        <item name="tabPaddingEnd">15dp</item>
        <item name="android:textAlignment">center</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabTextAppearance">@style/AppTabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/orange</item>
    </style>

    <!-- for text -->
    <style name="AppTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14dp</item>
        <item name="android:fontFamily">@font/robotomedium</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="TextView" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textSize">14dp</item>
        <item name="android:fontFamily">@font/robotomedium</item>
        <item name="android:textColor">@color/font_color</item>
    </style>

    <style name="MiniTextView" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textSize">12dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/robotomedium</item>
    </style>

    <style name="HeadingsTextView" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textSize">16dp</item>
        <item name="android:fontFamily">@font/robotomedium</item>
        <item name="android:textColor">@color/font_color</item>
    </style>

    <style name="Theme.UserDialog" parent="@style/Theme.AppCompat.Dialog.Alert">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@color/invisible</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

</resources>
